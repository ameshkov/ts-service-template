{
  "name": "ts-microservice-template",
  "version": "1.0.0",
  "description": "TypeScript microservice template with Hono, Prometheus metrics, and health checks",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format:check": "prettier --check --no-error-on-unmatched-pattern --cache . && markdownlint .",
    "format:fix": "prettier --write --no-error-on-unmatched-pattern --cache . && markdownlint --fix .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:junit": "vitest run --reporter=junit --outputFile=test-results.xml",
    "clean": "rm -rf dist node_modules",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@sentry/node": "^10.29.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.7.10",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/node": "^24.10.2",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.46.0",
    "prettier": "^3.7.4",
    "testcontainers": "^11.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.15"
  }
}
